{% extends 'base.html.twig' %}

{% block body %}
<div class="row m-0">
  <div class="container">
    <h1 class="text-center mt-5">Connexion</h1>
    <form  action="{{ path('security_login') }}" method="post" class="col-12 col-sm-6 col-lg-4 mx-auto mt-5">
    <div class="form-group">
      <input type="text" name="_username" value="" required placeholder="Adresse email" class="form-control">
    </div>
    <div class="form-group">
      <input type="password" name="_password" value="" required placeholder="Mot de passe" class="form-control">
    </div>
    <div class="form-group ">
      <button type="submit" name="button" class="btn btn-success mt-3">Connexion</button>
    </div>
   </form>
  </div>
</div>

    
  

{% endblock %}
